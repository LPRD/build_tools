exe=$(basename "$0")
WINEPREFIX=$( readlink -fn "$(pwd)/$(dirname $(dirname $0))" )
echo "WINEPREFIX=$WINEPREFIX"

export WINEPREFIX

/usr/bin/$exe "$@"
